<section id="top">
    <center>
      <h1 id="logo">CONFETTI CUISINE</h1>
      <div id="buttonHolder">
        <button id="buttons">Home</button>
        <button id="buttons">Cooking Courses</button>
        <button id="buttons">Contact</button>
      </div>
    </center>
  </section>
  
  <section id="content">
    <h2 id="formHeader">Edit your subscriber profile:</h2>
  
    <form
      id="newUserForm"
      action="/subscribers/<%= subscriber._id %>/update?_method=PUT"
      method="post">
      <label for="inputName">Name:</label>
      <input
        id="inputFirstName"
        type="text"
        name="name"
        value="<%= subscriber.name %>"
        required
        autofocus />
      <label for="inputEmail">Email:</label>
      <input
        id="inputEmail"
        type="email"
        name="email"
        value="<%= subscriber.email %>"
        required />
      <label for="inputZipCode">Zip Code:</label>
      <input
        id="inputZipCode"
        type="number"
        name="zipCode"
        pattern="[0-9]{5}"
        value="<%= subscriber.zipCode %>"
        required />
      <button
        id="submit"
        type="submit">
        submit
      </button>
    </form>
  </section>
  