<section id="top">
  <center>
    <h1 id="logo">CONFETTI CUISINE</h1>
    <div id="buttonHolder">
      <button id="buttons">Home</button>
      <button id="buttons">Cooking Courses</button>
      <button id="buttons">Contact</button>
    </div>
  </center>
</section>

<section id="content">
  <h2 id="formHeader">Create a new Subscriber:</h2>

  <form
    action="/subscribers/create"
    method="post">
    <label for="inputName">name:</label>
    <input
      id="inputName"
      type="text"
      name="name"
      required
      autofocus />
    <label for="inputEmail">Email:</label>
    <input
      id="inputEmail"
      type="email"
      name="email"
      required />
    <label for="inputZipCode">Zip Code:</label>
    <input
      id="inputZipCode"
      type="number"
      name="zipCode"
      pattern="[0-9]{5}"
      required />
    <button
      id="submit"
      type="submit">
      Create
    </button>
  </form>
</section>
