<section id="content">
  <h2 id="formHeader">Create a new user:</h2>

  <form
    id="newUserForm"
    action="/users/create"
    method="post">
    <label for="inputFirstName">First Name:</label>
    <input
      id="inputFirstName"
      type="text"
      name="firstName"
      required autofocus />
    <label for="inputLastName">Last Name:</label>
    <input
      id="inputLastName"
      type="text"
      name="lastName"
      required />
    <label for="inputEmail">Email:</label>
    <input
      id="inputEmail"
      type="email"
      name="email"
      required />
      <label for="inputPassword">Password:</label>
    <input
      id="inputPassword"
      type="password"
      name="password"
      required />
    <label for="inputZipCode">Zip Code:</label>
    <input
      id="inputZipCode"
      type="number"
      name="zipCode"
      pattern="[0-9]{5}"
      required />
    <button
      id="submit"
      type="submit"
      value="submit">
      Sign Up
    </button>
  </form>
</section>
